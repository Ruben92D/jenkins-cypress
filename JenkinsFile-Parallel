pipeline {
    agent any
    stages {
        stage('Clone Repo') {
            steps {
                git branch: 'main', url: 'https://github.com/Ruben92D/jenkins-cypress'
            }
        }
        stage('Dependencies') {
            steps {
                bat 'npm ci'
            }
        }
        stage('Test Execution in Desktop') {
            steps {
                script {
                    try {
                        parallel(
                            "Chrome": {
                                bat 'npx cypress run --e2e --browser chrome'
                            },
                            "Firefox": {
                                bat 'npx cypress run --e2e --browser firefox'
                            },
                            "Edge": {
                                bat 'npx cypress run --e2e --browser edge'
                            }
                        )
                    } catch (Exception e) {
                        echo "Error"
                    }
                }
            }
        }
        stage('Generate Log Report in the console') {
            steps {
                bat 'node generateConsoleReport.js'
            }
        }
    }
}